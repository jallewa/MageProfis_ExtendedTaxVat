<?xml version="1.0"?>
<config>
    <modules>
        <MageProfis_ExtendedTaxvat>
            <version>1.0.0.1</version>
        </MageProfis_ExtendedTaxvat>
    </modules>
    <global>
        <models>
            <extendedtaxvat>
                <class>MageProfis_ExtendedTaxvat_Model</class>
                <resourceModel>extendedtaxvat_resource</resourceModel>
            </extendedtaxvat>
            <extendedtaxvat_resource>
                <class>MageProfis_ExtendedTaxvat_Model_Resource</class>
                <entities>
                    <taxvat>
                        <table>extended_taxvat</table>
                    </taxvat>
                </entities>
            </extendedtaxvat_resource>	
            <checkout>
                <rewrite>
                    <type_onepage>MageProfis_ExtendedTaxvat_Model_Type_Onepage</type_onepage>
                </rewrite>
            </checkout>
        </models>
        <helpers>
             <extendedtaxvat>
                <class>MageProfis_ExtendedTaxvat_Helper</class>
            </extendedtaxvat>
        </helpers>
        <events>
            <controller_action_predispatch_checkout_onepage_saveBilling>
                <observers>
                    <checkout_taxvat>
                        <type>singleton</type>
                        <class>extendedtaxvat/observer</class>
                        <method>setQuoteAndSessionInCheckout</method>
                    </checkout_taxvat>
                </observers>
            </controller_action_predispatch_checkout_onepage_saveBilling>
            <customer_save_before>
                <observers>
                    <customer_taxvat_before>
                        <class>extendedtaxvat/observer</class>
                        <method>onCustomerSaveBefore</method>
                    </customer_taxvat_before>    
                </observers>
            </customer_save_before>
            <customer_save_after>
                <observers>
                    <customer_taxvat_after>
                        <class>extendedtaxvat/observer</class>
                        <method>onCustomerSaveAfter</method>
                    </customer_taxvat_after>    
                </observers>
            </customer_save_after>
        </events>
        <resources>
            <mageprofis_taxvat_setup>
                <setup>
                    <module>MageProfis_ExtendedTaxvat</module>
                    <class>MageProfis_ExtendedTaxvat_Model_Resource_Setup</class>
                </setup>
            </mageprofis_taxvat_setup>
        </resources>
    </global>
    <frontend>
        <translate>
            <modules>
                <extendedtaxvat>
                    <files>
                        <default>MageProfis_ExtendedTaxVat.csv</default>
                    </files>
                </extendedtaxvat>
            </modules>
        </translate>
    </frontend>
</config>
